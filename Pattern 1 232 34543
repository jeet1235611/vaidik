//Easiest Question

#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the value of n\n" << endl;
    cin >> n;
    
    for(int row = 1; row <= n; row++) {
        //spaces
        for(int spaces = n; spaces > row; spaces--) 
            cout << " ";
            
        //Number from increasing order.
        int num = row;
        for(int i = 1; i <= row; i++)
            cout << num++;
            
            num--;
            
        //Number from decreasing order.
            for(int j = 1; j < row; j++)
            cout << --num;
            
            cout << endl;
    }
}


//Output 
5
    1
   232
  34543
 4567654
567898765
